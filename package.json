{
  "name": "convolo-dialer",
  "author": "Convolo AI Communications AB",
  "version": "0.8.1",
  "main": "main.js",
  "description": "Convolo Dialer",
  "license": "ISC",
  "scripts": {
    "publish": "electron-builder -p always",
    "start": "electron .",
    "deploy": "electron-builder build --mac --publish always"
  },
  "devDependencies": {
    "electron": "^14.0.1",
    "electron-builder": "^22.11.7",
    "electron-notarize": "^1.1.1"
  },
  "dependencies": {
    "electron-log": "^4.4.1",
    "electron-updater": "^4.3.9"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "Addeo",
        "repo": "electron-auto-update"
      }
    ],
    "appId": "com.convolo.dialer",
    "productName": "Convolo Dialer",
    "afterSign": "./build/notarize.js",
    "mac": {
      "icon": "icon.icns",
      "identity": "Convolo AI Communications AB (C8K4V9RDD8)"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false
    },
    "linux": {
      "category": "your.app.category.type",
      "target": "AppImage"
    }
  }
}
